<%- include("../../../partials/header") %>
<%- include("../../../components/Header/admin") %>

<div class="container-fluid container-md px-0">
  <%- include("../../../components/Global/breadcrumb", {items: [
    {
      url: "/admin",
      label: "Home",
    },
    {
      label: "Kelas",
    },
    ]}) 
  %>
  <%- include("../../../components/Global/current-admin", {currentAdmin}) %>
  <div class="card">
    <div class="card-header" style="background-color: #094584; color: white">
      <h4 class="card-title mb-0">Kelas</h4>
    </div>

    <!-- Class Create Section - Start -->
    <div class="text-right">
      <button class="btn btn-success m-3" data-toggle="modal" data-target="#_add-class-modal-container">
        <i class="fa fa-plus" aria-hidden="true"></i>
      </button>
    </div>

    <div class="modal fade" id="_add-class-modal-container" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Kelas Baru</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
          </div>
          <form id="_add-class-form">
            <div class="modal-body">
                <div class="form-group">
                  <input class="form-control" type="text" name="study_program" placeholder="Program Studi" required />
                </div>
                <div class="form-group">
                  <input class="form-control" type="text" name="acronym" placeholder="Akronim" required />
                </div>
                <div class="form-group">
                  <input class="form-control" type="text" name="letter" placeholder="Huruf" required />
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-success">Create</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Class Create Section - End -->

    <div class="card-body py-0">
      <div class="row">
        <div class="col-12 pb-md-5 pt-2 pt-md-3">
          <!-- table - start -->
          <div class="table-responsive">
            <table class="table table-sm table-hover table-bordered text-center" style="font-size: 0.8rem">
              <thead>
                <tr style="background: #094584;color: white">
                  <th scope="col">ID</th>
                  <th scope="col">Nama</th>
                  <th scope="col">Program Studi</th>
                  <th scope="col">Akronim</th>
                  <th scope="col">Huruf</th>
                  <th scope="col" style="width: 100px;"></th>
                </tr>
              </thead>
              <tbody style="font-size: 0.9rem">
                <% classes.forEach((kelas) => { %>
                <tr>
                  <td class="align-middle"> <%= kelas.id %> </td>
                  <td class="align-middle"> <%= kelas.name %> </td>
                  <td class="align-middle"> <%= kelas.study_program %> </td>
                  <td class="align-middle"> <%= kelas.acronym %> </td>
                  <td class="align-middle"> <%= kelas.letter %> </td>
                  <td class="d-flex justify-content-around" > 
                    <a href="/admin/classes/<%= kelas.id %>/enroll" class="btn btn-secondary btn-sm">
                      <i class="fa fa-eye fa-xs" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-success btn-sm">
                      <i class="fa fa-pencil fa-xs" aria-hidden="true"></i>
                    </a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <!-- table - end -->
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../../../partials/footer") %>
<%- include("./script") %>
