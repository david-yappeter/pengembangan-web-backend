<div class="text-right">
  <button type="button" class="btn btn-success m-3" data-toggle="modal" data-target="#studentModal">
    <i class="fa fa-plus" aria-hidden="true"></i>
  </button>
</div>

<!-- Modal -->
<div class="modal fade" id="studentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tambah Murid</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="_add-student-enroll-form" class="position-relative" action="/admin/class_enrolls/<%= classEnroll.id %>/students">
        <div class="form-group modal-body">
          <input 
            type="text" 
            class="form-control" 
            id="nim" 
            name="nim"
            placeholder="Nim . . ."
            required
            autocomplete="nope"
          />
        </div>
        <ul id="searchResult" class="position-absolute pl-3" style="top:52px"></ul>

        <div class="modal-footer">
          <button type="submit" id="_add-student-btn" class="btn btn-success">Tambah</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {

    new window.JustValidate("#_add-student-enroll-form", {
      rules: {
        nim: {
          required: true,
        }
      },
      focusWrongField: true,

      submitHandler: function(form, values, ajax) {
        ajax({
          url: form.action,
          method: "POST",
          data: JSON.stringify(values),
          async:  true,
          callback: function() {
              window.location.reload();
          },
          error: function(response) {
            console.log(response);
            new SnackBar({
              message: "Internal Server Error",
              status: "error",
              timeout: 5000,
              position: "bl",
            });
          }
        })
      },
      invalidFormCallback: function (errors) {
        console.log(errors);
      },
    })

    let delayTimer;
    $("#nim").focusout(function() {
      setTimeout(() => {
        $("#searchResult").empty();
      }, 200)
    })

    $("#nim").keyup(function() {
      $("#searchResult").empty();
      clearTimeout(delayTimer);
      delayTimer = setTimeout(() => {
        var nim = $("#nim").val();
        if(nim === "") {
          $("#searchResult").empty();
          return;
        }
        $.ajax({
          url: "/admin/students/search",
          type: "POST",
          data: {
            "nim": nim
          },
          success: function(data) {
            $("#searchResult").empty();
  
            data.forEach((student) => {
              $("#searchResult").append(`
                <button type="button" class="list-group-item" value="${student.nim}">
                  ${student.nim}
                </button>
              `);
            });

            if(data.length === 0) {
              $("#searchResult").append(`
                <li class="list-group-item">
                  <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                  Data tidak ditemukan
                </li>
              `);
              return
            }
            
            $("#searchResult button").bind('click', function() {
              $("#nim").val($(this).val());
              $("#searchResult").empty();
            });
          }
        });
      }, 1000);
    });
  });
</script>