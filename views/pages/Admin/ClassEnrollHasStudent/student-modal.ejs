<div class="text-right">
  <button type="button" class="btn btn-success m-3" data-toggle="modal" data-target="#studentModal">
    <i class="fa fa-plus" aria-hidden="true"></i>
  </button>
</div>

<!-- Modal -->
<div class="modal fade" id="studentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tambah Mahasiswa</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="_add-student-enroll-form" class="position-relative" action="/admin/class_enrolls/<%= classEnroll.id %>/students">
        <div class="form-group modal-body">
          <input 
            type="text" 
            class="form-control" 
            id="nim" 
            name="nim"
            placeholder="Nim . . ."
            required
            autocomplete="nope"
          />
        </div>
        <ul id="searchResult" class="position-absolute pl-3" style="top:52px"></ul>

        <div class="modal-footer">
          <button type="submit" id="_add-student-btn" class="btn btn-success">Tambah</button>
        </div>
      </form>
    </div>
  </div>
</div>
