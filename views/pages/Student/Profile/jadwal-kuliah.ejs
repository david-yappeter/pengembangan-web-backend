<h4 class="text-center"><u>Jadwal Harian Masuk Kuliah </u></h4>

<div class="table-responsive">
  <table class="table table-sm table-hover table-bordered text-center" style="font-size: 0.8rem">
    <thead>
      <tr style="background: #094584;color: white">
        <th scope="col">Hari</th>
        <th scope="col">Kode</th>
        <th scope="col">Mata Kuliah</th>
        <th scope="col">Kelas</th>
        <th scope="col">Ruangan</th>
        <th scope="col">Pukul</th>
        <th scope="col">SKS</th>
      </tr>
    </thead>
    <tbody style="font-size: 0.9rem">
      <% currentClassEnroll.class_enroll_subjects.forEach((jadwal) => { %>
      <tr>
        <td><%= jadwal.day %></td>
        <td><%= jadwal.subject_code %></td>
        <td class="text-left"><%= jadwal.subject.name %></td>
        <td><%= currentClassEnroll.class.acronym + " - " + currentClassEnroll.class.letter %></td>
        <td><%= jadwal.room_name %></td>
        <td><%= jadwal.start_time.substring(0,5) + " - " + jadwal.end_time.substring(0,5) %></td>
        <td><%= Math.ceil(((new Date("01/01/2007 " + jadwal.end_time).getHours() * 60 + new Date("01/01/2007 " + jadwal.end_time).getMinutes()) - (new Date("01/01/2007 " + jadwal.start_time).getHours() * 60 + new Date("01/01/2007 " + jadwal.start_time).getMinutes())) /  60.0)  %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
